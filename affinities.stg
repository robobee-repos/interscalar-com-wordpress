/*
 *
 */
affinitiesGroup(parent, vars) ::= <<
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: muellerpublic.de/role
                operator: In
                values:
                - web
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 10
              preference:
                matchExpressions:
                - key: group
                  operator: In
                  values:
                  - interscalar-com
        podAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: group
                  operator: In
                  values:
                  - interscalar-com
              topologyKey: kubernetes.io/hostname
>>
