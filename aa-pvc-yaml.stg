/*
 * Mandatory:
 *
 * vars.volume.storage
 */

aa-pvc-yaml(parent, vars) ::= <<
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: interscalar-com
  namespace: interscalar-com
  labels:
    group: interscalar-com
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: <vars.volume.storage>

>>
