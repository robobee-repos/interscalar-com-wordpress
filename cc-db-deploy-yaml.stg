/*
 * Mandatory:
 *
 * vars.db.image.name
 * vars.db.image.version
 * vars.rsync.image.name
 * vars.rsync.image.version
 * vars.rsync.ssh.revision
 *
 * Optional:
 *
 * vars.db.limits.cpu
 * vars.db.limits.memory
 * vars.db.requests.cpu
 * vars.db.requests.memory
 * vars.db.affinity.key
 * vars.db.affinity.name
 * vars.db.affinity.required
 * vars.db.allowOnMaster
 * vars.db.tolerations[].effect
 * vars.db.tolerations[].key
 * vars.db.tolerations[].value
 * vars.rsync.limits.cpu
 * vars.rsync.limits.memory
 * vars.rsync.requests.cpu
 * vars.rsync.requests.memory
 */

import "robobeerun-templates/_affinities.stg"
import "robobeerun-templates/_mysql_probe.stg"
import "robobeerun-templates/_resources.stg"
import "robobeerun-templates/_tolerations.stg"

/*
 *
 */
cc-db-deploy-yaml(parent, vars) ::= <<

---

apiVersion: v1
kind: Service
metadata:
  name: db
  namespace: www-interscalar-com
  labels:
    tier: backend
    group: www-interscalar-com
spec:
  ports:
  - name: "mysql"
    port: 3306
    targetPort: 3306
  selector:
    app: mariadb

---

apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rsync-mariadb
  namespace: www-interscalar-com
  labels:
    app: rsync-mariadb
    tier: backup
    group: www-interscalar-com
spec:
  replicas: 0
  selector:
    matchLabels:
      app: rsync-mariadb
      tier: backup
      group: www-interscalar-com
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: rsync-mariadb
        tier: backup
        group: www-interscalar-com
    spec:
      containers:
      - image: <vars.rsync.image.name>:<vars.rsync.image.version>
        name: rsync-mariadb
        env:
        - name: RSYNC_AUTHORIZED_KEY
          valueFrom:
            secretKeyRef:
              name: rsync-ssh-<vars.rsync.ssh.revision>
              key: auth-key
        - name: USER
          value: "root"
        - name: RSYNC_STRICT_HOST_KEY_CHECKING_NO
          value: "true"
        ports:
        - containerPort: 2222
          name: ssh
        readinessProbe:
          exec:
            command:
            - /readiness.sh
            - /data/data/aria_log_control
          initialDelaySeconds: 5
          timeoutSeconds: 1
        <resourcesGroup(parent, vars, vars.rsync)>
        volumeMounts:
        - mountPath: /data
          name: db
          subPath: db
        - mountPath: /mariadb_logs
          name: db
          subPath: db_logs
      restartPolicy: Always
      volumes:
      - name: db
        persistentVolumeClaim:
          claimName: interscalar-com
      <affinitiesGroup(parent, vars, vars.db.affinity)>
      <tolerationMasterGroup(parent, vars, vars.db.allowOnMaster)>
      <tolerationsGroup(parent, vars, vars.db.tolerations, vars.db.allowOnMaster)>

---

>>
